# =============================================================================
# DOCKER ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=docker

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection settings for Docker environment
# Using service name 'db' as host (Docker internal networking)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testdb
DB_USER=postgres
DB_PASSWORD=postgres

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
# Ollama settings for Docker environment
# Using host.docker.internal to access Ollama running on host machine
OLLAMA_MODEL=llama3.1:latest
OLLAMA_BASE_URL= http://host.docker.internal:11434
OLLAMA_CONTEXT_WINDOW=10000
OLLAMA_MAX_TOKENS=2500
OLLAMA_TEMPERATURE=0.8
OLLAMA_REQUEST_TIMEOUT=360